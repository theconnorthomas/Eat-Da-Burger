<h1>Eat-Da-Burger!</h1>

<main>
    <div class="container">
        <div class="row main">
            <div class="col s12 m8 offset-m2 l6">
                <h2>Burger most wanted list</h2>
                {{#each burgers}} {{#unless this.devoured}}
                <div>
                    <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                        <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
                    </form>
                </div>
                {{/unless}} {{/each}}
            </div>

            <div class="col s12 m8 offset-m2 l6">
                <h2>Alredy eaten list</h2>
                {{#each burgers}} {{#if this.devoured}}
                <div class='burgerEaten'>
                    <div>
                        {{this.burger_name}}
                    </div>
                </div>
                {{/if}} {{/each}}
            </div>
        </div>
    </div>
</main>

<h2>Add A Burger To The List</h2>

<div class="row">
    <div class="col s12 m8 offset-m2 offset-l3 l6">
        <form action="/burgers" method="POST">
            <input type="text" id="name" name="burger_name" placeholder="New Burger">
            <button type="submit" class="addBurgerButton">Add Da Burger</button>
        </form>
    </div>
</div>